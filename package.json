    "identity-obj-proxy": "3.0.0",
    "jest": "30.0.5",
    "lint-staged": "16.1.5",
    "next-sitemap": "4.2.3",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-sort-class-names": "3.0.1",
    "react-test-renderer": "19.1.1",
    "rehype-autolink-headings": "7.1.0",
    "rehype-pretty-code": "0.14.1",
    "rehype-slug": "6.0.0",
    "remark-gfm": "4.0.1",
    "sass": "1.90.0",
    "standard-version": "9.5.0",
    "tailwindcss": "^4.1.11",
