    "@radix-ui/react-slot": "1.2.3",
    "@tailwindcss/typography": "0.5.16",
    "axios": "1.11.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "contentlayer": "0.3.4",
    "date-fns": "4.1.0",
    "framer-motion": "12.23.12",
    "install": "0.13.0",
    "lucide-react": "0.539.0",
    "next": "15.4.6",
    "next-contentlayer": "0.3.4",
